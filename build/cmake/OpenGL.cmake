if(WIN32 AND RADONFRAMEWORK_USE_OPENGL)
    OPTION(RADONFRAMEWORK_USE_OPENGL_WDM "Enable WDM support of OpenGL Canvas." ON)
    mark_as_advanced(RADONFRAMEWORK_USE_OPENGL_WDM)
    OPTION(RADONFRAMEWORK_USE_OPENGL_GDI "Enable GDI support of OpenGL Canvas." ON)
    mark_as_advanced(RADONFRAMEWORK_USE_OPENGL_GDI)
    
    if(RADONFRAMEWORK_USE_OPENGL_WDM)
        set(USEWDM "#ifndef RF_USE_WDM\n#define RF_USE_WDM\n#endif")
    endif()
    if(RADONFRAMEWORK_USE_OPENGL_GDI)
        set(USEGDI "#ifndef RF_USE_GDI\n#define RF_USE_GDI\n#endif")            
    endif()
    set(OSLIBS ${OSLIBS} OpenGL32)
endif()

if(UNIX AND RADONFRAMEWORK_USE_OPENGL)
    OPTION(RADONFRAMEWORK_USE_OPENGL_X11 "Enable X11 support of OpenGL Canvas." ON)
    mark_as_advanced(RADONFRAMEWORK_USE_OPENGL_X11)
    
    if (RADONFRAMEWORK_USE_OPENGL_X11)
        find_package(X11)
        if(X11_FOUND)
            set(OSLIBS ${OSLIBS} GL GLU)
            set(USEX11 "#ifndef RF_USE_X11\n#define RF_USE_X11\n#endif")
            set(OSLIBS ${OSLIBS} X11)
            find_path(X11_Xmu_INCLUDE_PATH X11/Xmu/Xmu.h ${X11_INC_SEARCH_PATH})
            find_library(X11_Xmu_LIB Xmu ${X11_LIB_SEARCH_PATH})
            if(X11_Xmu_INCLUDE_PATH AND X11_Xmu_LIB)
                set(X11_Xmu_FOUND TRUE)
                message(STATUS "X11 support: Yes")
            endif(X11_Xmu_INCLUDE_PATH AND X11_Xmu_LIB)
            set(RADONFRAMEWORK_USE_X11 1)
        else()
            set(RADONFRAMEWORK_USE_OPENGL OFF CACHE BOOL "Activate OpenGL" FORCE)
        endif(X11_FOUND)    
    endif()    
endif()

include_directories(${OPENGL_INCLUDE_DIR})
set(USEOPENGL "#ifndef RF_USE_OPENGL\n#define RF_USE_OPENGL\n#endif")     